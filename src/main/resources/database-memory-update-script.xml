<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

  <changeSet id="1" author="me">

    <createTable tableName="PLAYERS">
      <column name="PLY_ID" type="SMALLINT" autoIncrement="true"><constraints primaryKey="true"/></column>
      <column name="ACC_ID" type="SMALLINT" />
      <column name="ACTIVE" type="BOOLEAN" defaultValueBoolean="false"/>
      <column name="ONLINE" type="BOOLEAN" defaultValueBoolean="false"/>
      <column name="ROLE" type="TINYINT" defaultValueNumeric="0"/>
      <column name="NAME" type="VARCHAR(255)" />
    </createTable>
  </changeSet>

</databaseChangeLog>
